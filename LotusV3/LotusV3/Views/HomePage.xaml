<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotusV3.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido a Lotus Usuario!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BtnListViewCortes" Text="Lista de cortes de cabello para hombre" Clicked="BtnListViewCortes_Clicked" TextColor="#8B7556" BackgroundColor="#7f052a"/>
            <Button x:Name="BtnCalendario" Text="Calendario" TextColor="#8B7556" BackgroundColor="#7f052a"/>
            <Button x:Name="BtnMetodo" Text="Metodo de Pago" TextColor="#8B7556" BackgroundColor="#7f052a"/>
            <Button x:Name="BtnTinte" Text="Tintes" TextColor="#8B7556" BackgroundColor="#7f052a"/>
            <Button Text="Logout" Clicked="Button_Clicked" TextColor="#8B7556" BackgroundColor="#7f052a"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>