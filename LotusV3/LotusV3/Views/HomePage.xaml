<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotusV3.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido a Lotus Usuario!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BtnCalendario" Text="Calendario" TextColor="White" BackgroundColor="#8B7556"/>
            <Button x:Name="BtnListView" Clicked="BtnListView_Clicked" Text="ListView" TextColor="White" BackgroundColor="#8B7556"/>
            <Button Text="Logout" Clicked="Logout_Clicked" TextColor="White" BackgroundColor="#8B7556"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>