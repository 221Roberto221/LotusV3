<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotusV3.Calendario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Servicios" HorizontalOptions="Center" FontSize="Title"/>
            <Label Text="Selecciona el servicio que desee."/>
            <RadioButton Content="Corte"
                         CheckedChanged="PlayerChanged"/>
            <RadioButton Content="Tinte"
                         CheckedChanged="PlayerChanged"
                         IsChecked="True"/>
            <Label x:Name="Lbl_Auxiliar" TextColor="Black"/>
            
            <Label Text="Fecha de cita"/>
            <DatePicker/>
            <Label Text="Hora de la cita"/>
            <TimePicker/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>